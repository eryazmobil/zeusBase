<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="com.google.android.material.card.MaterialCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_10sdp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="0dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#A8A8A8"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="İrsaliye Detayı" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:drawablePadding="2dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:minHeight="32dp"
            android:padding="0dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#2C2C2C"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="24/03/2023 12:00" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/documentNoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:drawablePadding="2dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:minHeight="32dp"
            android:padding="0dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#2C2C2C"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:fontFamily="@font/sogeoui"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTxt"
            tools:text="ER1234567890" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/clientNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="2dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:minHeight="32dp"
            android:padding="0dp"
            app:fontFamily="@font/sogeoui"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#2C2C2C"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/documentNoTxt"
            tools:text="ERYAZ SOFTWARE ZEUS WMS" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>