<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="top|left"
        android:background="@color/transparent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            app:cardBackgroundColor="?colorSurface"
            app:cardCornerRadius="12dp"
            app:cardElevation="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_margin="@dimen/_20sdp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/quickControlTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_control"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/checkbox_meat"
                    app:layout_constraintEnd_toStartOf="@+id/checkbox_meat"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/checkbox_meat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/menu_list_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/menu_list_detail"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/quickControlTextView"
                    app:layout_constraintTop_toBottomOf="@+id/quickControlTextView" />

                <TextView
                    android:id="@+id/finish_process_acceptance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/finish_process_acceptance"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/menu_list_detail"
                    app:layout_constraintTop_toBottomOf="@+id/menu_list_detail" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

